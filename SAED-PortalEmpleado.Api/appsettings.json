{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=SAED_PortalEmpleado;User Id=sa;Password=REPLACE_WITH_SQL_PASSWORD;TrustServerCertificate=True;MultipleActiveResultSets=true;Encrypt=False"
  },
  "DatabaseProvider": "SqlServer",
  "Features": {
    "Vacaciones": false
  },
  "Recibos": {
    "MockData": false
  },
  "Authentication": {
    "Google": {
      "ClientId": "REPLACE_WITH_GOOGLE_CLIENT_ID",
      "ClientSecret": "REPLACE_WITH_GOOGLE_CLIENT_SECRET",
      "ValidAudiences": [
        "REPLACE_WITH_GOOGLE_CLIENT_ID"
      ],
      "ValidIssuers": [
        "https://accounts.google.com"
      ]
    },
    "AllowedEmailDomains": [ "saed.ar" ]
  },
  "Directory": {
    "ServiceAccountJsonPath": "../secrets/saed-rrhh-sa.json",
    "AdminUser": "ramons@saed.ar",
    "CustomSchema": "SAED-RRHH",
    "CuilField": "CUIL"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/portal-empleado-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{Properties}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-024.grafana.net",
          "labels": [
            { "key": "app", "value": "portal-empleado" },
            { "key": "environment", "value": "development" }
          ],
          "propertiesAsLabels": [ "Source" ],
          "credentials": {
            "login": "1484602",
            "password": "REPLACE_WITH_GRAFANA_API_TOKEN"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName" ]
  },
  "RateLimiting": {
    "FixedWindow": {
      "PermitLimit": 100,
      "Window": "00:01:00"
    },
    "SlidingWindow": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "SegmentsPerWindow": 6
    }
  },
  "SecuritySettings": {
    "Cookie": {
      "HttpOnly": true,
      "Secure": true,
      "SameSite": "Strict",
      "MaxAge": 86400
    }
  },
  "AllowedHosts": "*"
}
